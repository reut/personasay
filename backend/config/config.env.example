# PersonaSay LangChain Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env files with real secrets to version control

# ============================================================================
# OpenAI Configuration
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# Database Configuration
# ============================================================================
# For development (SQLite)
DATABASE_URL=sqlite:///./data/personasay.db

# For production (PostgreSQL recommended)
# DATABASE_URL=postgresql://username:password@host:5432/database_name

# ============================================================================
# Redis Configuration (optional - for session storage and caching)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# Application Configuration
# ============================================================================
# Set to "production" in production environment
ENVIRONMENT=development

# Set to false in production
DEBUG=false

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8001

# ============================================================================
# Logging Configuration
# ============================================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Use WARNING or ERROR in production
LOG_LEVEL=INFO

# Set to true to write logs to file
LOG_TO_FILE=true

# ============================================================================
# Security Configuration
# ============================================================================
# Generate a secure random key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev-secret-key-change-in-production

# CORS Origins (comma-separated, no spaces)
# For development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# For production, use your actual domain(s):
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com